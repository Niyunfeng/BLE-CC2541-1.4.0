    110          #define OSALMEM_SMALL_BLKSZ       (OSALMEM_ROUND(16))
    111          #endif
    112          #if !defined OSALMEM_SMALL_BLKCNT
    113          #define OSALMEM_SMALL_BLKCNT       8
    114          #endif
