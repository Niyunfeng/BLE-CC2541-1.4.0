     72          typedef enum {
     73          	// HAL_I2C_MASTER mode statuses.
     74          	mstStarted = 0x08,
     75          	mstRepStart = 0x10,
     76          	mstAddrAckW = 0x18,
     77          	mstAddrNackW = 0x20,
     78          	mstDataAckW = 0x28,
     79          	mstDataNackW = 0x30,
     80          	mstLostArb = 0x38,
     81          	mstAddrAckR = 0x40,
     82          	mstAddrNackR = 0x48,
     83          	mstDataAckR = 0x50,
     84          	mstDataNackR = 0x58,
     85          } i2cStatus_t;
