    324                  pRpt->cccdHandle = battAttrTbl[BATT_LEVEL_VALUE_CCCD_IDX].handle;
    325                  pRpt->mode = HID_PROTOCOL_MODE_REPORT;
    326                }
    327                break;
    328          
    329              default:
    330                ret = INVALIDPARAMETER;
    331                break;
    332            }
    333          
    334            return ( ret );
    335          }
